@model GateRiddleSolver.Models.TranslationRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TranslationRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TextToTranslate" class="control-label"></label>
                <input asp-for="TextToTranslate" class="form-control" />
                <span asp-validation-for="TextToTranslate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TranslationResult" class="control-label"></label>
                <input asp-for="TranslationResult" class="form-control" />
                <span asp-validation-for="TranslationResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label"></label>
                <select asp-for="LanguageId" class ="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="form-group">
                <button type="button" id="translate" class="btn btn-secondary">Translate</button>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#translate').click(function() {
            var textToTranslate = document.getElementsByName('TextToTranslate').value;
            console.log(textToTranslate);
            var language = $('select.LanguageId').textContent;
            console.log(language);
            $.getJSON(
                "//api.funtranslations.com/translate/"+ language +".json?text=" + textToTranslate,
                function (data) { $('#TranslationResult').value = (data.contents.translated); }
            );
        });

    </script>
}
